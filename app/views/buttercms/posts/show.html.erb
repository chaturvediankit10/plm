<%= content_for :html_title, @post.seo_title %>
<%= content_for :meta_description, @post.meta_description %>
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="blog-post-box">
        <!-- Post title -->
        <h2><%= @post.title %></h2>
        <!-- Post author -->
        <p>
          <%= link_to "#{@post.author.first_name} #{@post.author.last_name}", buttercms_author_path(@post.author.slug) %>
        </p>

        <!-- Post categories -->
        <% @post.categories.each do |category| %>
          <%= link_to category.name, buttercms_category_path(category.slug), :title => category.name %>
        <% end %>

        <!-- Publish date -->
        <p><%= Time.parse(@post.published).strftime('%B %d, %Y') %></p>

        <!-- Post body -->
          <%= @post.body.html_safe %>
      
        <!-- Link to Next Post -->
        <div class="pull-right">
          <% if @next_post %>
            <b>Next Topic: </b>
            <%= link_to @next_post.title, buttercms_post_path(@next_post.slug), :title => @next_post.title %>
          <% end %>
        </div>
      </div>
    </div>

      <!--sidebar start-->
    <div class="col-md-4">
      <div class="sidebar-blog">

        <div class="rght-sidebar-box">
          <h3>Share your research</h3>
            <div class="rght-sidebar-box-dtail">
            <p>Lorem Ipsum is simply dummy text of the printing and type setting industry. Lorem Ipsum has been the industry's.</p>
            <!-- <a class="blog-cntct-btn" href="javascript:void(0);">Contact Us</a> -->
            <%=link_to "Contact Us",show_cms_pages_path(page_slug: 'contact'), class: 'blog-cntct-btn'%>
            </div>
        </div>

        <div class="rght-sidebar-box">
          <h3>Research papers by Category</h3>
          <div class="rght-sidebar-box-dtail">
            <%ButterCMS::Category.all().each do |category|%>
              <div class="rght-sidebar-box-dtail-sectns">
                <h5><%= link_to category.name, buttercms_category_path(category.slug), :title => category.name %> </h5>
              </div>
            <% end %>
          </div>
        </div>
      </div>  
    </div>
<!--sidebar end-->



</div>
