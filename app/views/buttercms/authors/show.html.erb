<%= content_for :html_title, "#{@author.first_name} #{@author.last_name}" %>
<%= content_for :meta_description, @author.bio %>

<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="blog-post-box">
        <div class="blog-post">
          <!-- Author name -->
          <h4><%= @author.first_name %> <%= @author.last_name %></h4>

          <!-- Author profile -->
          <% if @author.profile_image %>
            <img src="<%= @author.profile_image %>" />
          <% end %>

          <p class="post-by">Title: <%= @author.title %></p>
          <p>Bio: <%= @author.bio %></p>

          <!-- Recent posts -->
          <h4>Recent posts</h4>

          <ul class="author-posts">
            <% @author.recent_posts.each do |post| %>
              <li><%= render :partial => 'buttercms/posts/post', :locals => {:post => post} %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
       <%= render 'partials/butter_cms_side_form'%>
  </div>
</div>