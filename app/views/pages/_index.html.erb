<!-- experts block start--> 
<%if current_user.present? %>
  <section class="home-experts-box">
     <div class="container">
        <h2 class="mb-hide">Mortgage Experts that specilize in <%= @city_name.present? ? @city_name : "Mountain View" %>, <%= @state_code.present? && @state_code!="All" ? @state_code : "CA" %></h2>
        <h2 class="mb-only">Mortgage Experts in <%= @city_name.present? ? @city_name : "Mountain View" %>, <%= @state_code.present? ? @state_code : "CA" %></h2>
        <div class="home-experts">
           <div class="row">
              <div class="col-xs-12 col-md-9">
                 <div class="desktop-experts">
                    <%if @experts.present? %>
                       <%@experts.each do |exp|%>
                          <div class="col-xs-12 col-md-3 text-center">
                             <%= image_tag exp.image.url(:thumb)%>
                             <h3 class="hiden-txt-mb"><%=exp.first_name%> <%=exp.last_name%></h3>
                             <a href="mailto:<%=exp.email%>"><img src="images/email_07.png" alt=""> <%= exp.email%></a>
                             <a href="tel:<%=exp.phone%>"><img src="images/phone_07.png" alt=""> <%=mobile_no_formatting(exp.phone)%></a>
                          </div>
                       <%end%>
                    <%end%>
                 </div>
                 <!--experts slider for mobile-->
                 <div class="mb-experts-slider">
                    <div id="myCarousel" class="carousel slide" data-ride="carousel">
                       <!-- Wrapper for slides -->
                       <div class="carousel-inner">
                          <% i = 1 %>
                          <%if @experts.present? %>
                            <%@experts.each do |exp|%>
                               <div class="item <%= (i==1) ? 'active' : '' %>">
                                  <div class="col-xs-12 col-md-12 text-center">
                                     <div class="mb-expert-img-box"><%= image_tag exp.image.url(:thumb)%></div>
                                     <h3 class="hiden-txt-mb"><%=exp.first_name%> <%=exp.last_name%></h3>
                                     <a href="mailto:<%=exp.email%>"><img src="images/email_07.png" alt=""> <%= exp.email%></a>
                                     <a href="tel:<%=exp.phone%>"><img src="images/phone_07.png" alt=""> <%=mobile_no_formatting(exp.phone)%></a>
                                  </div>
                               </div>
                               <% i+=1 %>
                            <%end%>
                           <%end%>
                       </div>
                       <!-- Left and right controls -->
                       <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                       <img src="images/expert-slider-arrow-left.png" alt="">
                       </a>
                       <a class="right carousel-control" href="#myCarousel" data-slide="next">
                       <img src="images/expert-slider-arrow-right.png" alt="">
                       </a>
                    </div>
                 </div>
              </div>
              <div class="col-xs-12 col-md-3 expert-cntnt-btn">
                 <div class="expert-cntnt-btn-inner">
                    <p class="mb-hide">Get featured and reach hundreds of thousands of home buyers or refi customers monthly!</p>
                    <p class="mb-only">Get featured and reach hundreds of thousands of home buyers or refi customers monthly!</p>
                    <div class="submit-aplicatn-btn-box">
                       <%#= link_to "Apply",buttercms_blog_path, class: "dtail-btn"%>
                       <a href="" data-toggle="modal" data-target="#expert-app-overlay" class="dtail-btn">Apply</a>
                       <!-- <a href="" data-toggle="modal" data-target="#expert-app-overlay" class="">Submit Application</a> -->
                    </div>
                 </div>
              </div>
           </div>
        </div>
     </div>
  </section>
<%end%>
<!-- experts block end-->
