    <%= render partial: "partials/location_rates" %>
    <div class="modal fade common-popup-layout signup-login-popup" id="create-price-alert" role="dialog">
      <div class="modal-dialog">
         <!-- Modal content-->
         <div class="modal-content">
            <div class="modal-header">
               <button type="button" class="close" data-dismiss="modal"><img src="/images/cancel_03.png" alt="" class="login-cross-img"></button>
