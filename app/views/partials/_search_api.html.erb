  border: 1px solid #ddd;
  padding: 5px 15px;
  margin-bottom: 0;
  text-align: left;
}
.mar-b30{
  margin-bottom: 5px;
}
.mar-22{
  margin-left: 35px;
}
.padding-zero{
  padding: 0 !important;
}
.field-wrapper .form-group{
  margin-bottom: 10px;
}
.field-wrapper input[type="text"],
.field-wrapper select {
  float: none;
  width: 100%;
  border: 1px solid #ddd;
  background-color: #fff;
  border-radius: 5px;
  color: #333;
  font-size: 13px;
  padding: 5px 5px;
  font-weight: 500;
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none;
  position: relative;
}
.field-wrapper .slect-tag{
  position: relative;
}
.field-wrapper input[type="text"]{
  padding-left: 20px;
}
.field-wrapper .dollar-icn{
  bottom: 5px;
}
#reset_all_btn {
  font-size: 15px;
  font-weight: normal;
  color: #fff;
  border-radius: 5px;
  padding: 8px 40px;
  background: #a7a6ac;
  text-transform: uppercase;
  border-color:  #a7a6ac;
}
.field-wrapper label {
    float: none;
    width: 100%;
    margin: 0 0 5px 0;
    font-size: 16px;
    color: #000;
    font-weight: bold;
}
.field-wrapper .slect-tag:before,
.field-wrapper .slect-tag:before {
  content: "\f107";
  font-family: FontAwesome;
  font-style: normal;
  font-weight: normal;
  text-decoration: inherit;
  color: #333;
  font-size: 18px;
  padding-right: 0.5em;
  position: absolute;
  bottom: 5px;
  right: 0;
  z-index: 9;
}
.field-wrapper .checkbox label {
  font-weight: normal;
  font-size: 13px !important;
  float: none;
  margin-bottom: 5px !important;
}
.field-wrapper .checkbox .checkmark {
  background-color: #fff;
  border-radius: 0;
  /*border: 1px solid #ddd;*/
}
.field-wrapper .checkbox .radio-bx input:checked ~ .checkmark {
    background-color: #fff;
    outline: 1px solid #000;
}

.input-area{
  position: relative;
}
.input-leble {
    font-weight: normal;
    display: block;
    text-align: left;
    padding: 5px 0;
}
.field-wrapper .checkbox, .radio{
  margin-top: 0;
  margin-bottom: 5px;
}
  .radio-boxes {
    margin-left: 15px;
  }

  .radio-bx {
    display: block;
    position: relative;
    padding-left: 30px !important;
    margin-bottom: 12px !important;
    cursor: pointer !important;
    font-size: 16px !important;
    -webkit-user-select: none !important;
    -moz-user-select: none !important;
    -ms-user-select: none !important;
    user-select: none !important;
  }

  /* Hide the browser's default radio button */
  .radio-bx input {
    position: absolute;
    opacity: 0;
    cursor: pointer;
  }

  /* Create a custom radio button */
  .checkmark {
    position: absolute;
    top: 0;
    left: 0;
    height: 16px;
    width: 16px;
    background-color: #eee;
    border-radius: 10%;
    outline: 1px solid #C0C0C0;
  }

  /* On mouse-over, add a grey background color */
  .radio-bx:hover input ~ .checkmark {
    background-color: #ccc;
  }

  /* When the radio button is checked, add a blue background */
  .radio-bx input:checked ~ .checkmark {
    background-color: #2196F3;
  }

  /* Create the indicator (the dot/circle - hidden when not checked) */
  .checkmark:after {
    content: "";
    position: absolute;
    display: none;
  }

  /* Show the indicator (dot/circle) when checked */
  .radio-bx input:checked ~ .checkmark:after {
    display: block;
  }

  /* Style the indicator (dot/circle) */
  .field-wrapper .radio-bx .checkmark:after {
    left: 5px;
    top: 1px;
    width: 7px;
    height: 12px;
    border: solid #000;
    border-width: 0 3px 3px 0;
    -webkit-transform: rotate(45deg);
    -ms-transform: rotate(45deg);
    transform: rotate(45deg);
  }
  @media( min-width:320px) and ( max-width:767px) {
    .field-wrapper {
      margin-bottom: 5px;
    }
  }
</style>
