<!-- view details popup start-->
<%
  program_data = Program.find(program[:id])
%>
<div class="modal fade view-details-popup" id="view-details-popup-<%=index%>" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <!-- <button type="button" class="close" data-dismiss="modal"><%#= image_tag("Homepage-login-overlayw_03.png", :alt => "close", :class => "login-cross-img") %> </button> -->
      <button type="button" class="close" data-dismiss="modal">Ã—</button>
      <div class="modal-header">
        <section class="tab-header">
            <div class="row">
              <div class="col-md-3">
                <div class="bank-logos">
                  <span>
                    <!-- <%#= image_tag(<%= program.bank_name+".png" %>, class: "popup-logo-img") %> -->
                    <img src="<%= "/assets/"+program[:bank_name] %>.png" >
                  </span>
                  <div class="extra-wrap">
                    <h1><%= program[:bank_name] %></h1>
                    <p>NMLS ID 54645</p>
                  </div>
                </div>
              </div>
              <div class="col-md-9">
                <ul class="nav nav-tabs">
                  <li class="active"><a href="#tab1warning-<%=index%>" data-toggle="tab">Loan Overview</a></li>
                  <li><a href="#tab2warning-<%=index%>" data-toggle="tab">Monthly Calculator</a></li>
                  <li><a href="#tab3warning-<%=index%>" data-toggle="tab">Loan Parameters</a></li>
                </ul>
              </div>
            </div>
        </section>
      </div>
      <div class="modal-body">
        <div class="with-nav-tabs panel-warning">
          <div class="panel-body">
            <div class="tab-content">
              <div class="tab-pane fade in active" id="tab1warning-<%=index%>">
                <div class="row">
                  <div class="col-md-6">
                    <div class="content-bx">
                      <h1>Loan Overview</h1>
                      <div class="content-bx-content">
                        <table class="table table-striped table-condensed">
                          <tbody>
                            <tr>
                              <%
                              pro_term = ''
                              if program_data.term.present?
                                if program_data.term.to_s.length >2
                                  pro_term = (program_data.term/100).to_s+"-"+(program_data.term%100).to_s
                                else
                                  pro_term = program_data.term.to_s
                                end
                              end
                              %>
                              <td><%= pro_term%> <%= pro_term.present? ? "Year Fixed" : ""%></td>
                              <td><b><%= final_rate %>% Rate</b></td>
                            </tr>
                            <tr>
                              <td>Closing Costs</td>
                              <td><b>$6,590</b></td>
                            </tr>
                            <tr>
                              <td>Loan Amount</td>
                              <% loan_amount_value = (@home_price.to_i - @down_payment.to_i) rescue nil %>
                              <td><b> <%= "$" + loan_amount_value.to_s if loan_amount_value.present? rescue nil %></b></td>
                            </tr>
                          </tbody>
                        </table>
                      </div>
                    </div>
                    <span class="small-p">Updated Aug 8/30 day rate lock</span>
                    <div class="content-bx">
                      <h1>Closing Costs</h1>
                      <div class="content-bx-content">
                        <table class="table table-striped table-condensed">
                          <tbody>
                            <tr>
                              <td>Base Point</td>
                              <td><b><%= program[:base_rate] %></b></td>
                            </tr>
                            <tr>
                              <td>LTV / Credit Score</td>
                              <td><b><%= @ltv1%> / <%= @credit_score1%></b></td>
                            </tr>
                            <tr>
                              <td>Loan Amount</td>
                              <td><b> <%= "$" + loan_amount_value.to_s if loan_amount_value.present? rescue nil %></b></td>
                            </tr>
                            <tr>
                              <td>State</td>
                              <td><b><%= @state%></b></td>
                            </tr>
                            <tr>
                              <td>Investment Property</td>
                              <td><b>-$480 / -0.200 Points</b></td>
                            </tr>
                            <tr>
                              <td class="orange-clr">Final</td>
                              <td class="orange-clr"><b>$6,590 / 2.746 Points</b></td>
                            </tr>
                          </tbody>
                        </table>
                      </div>
                    </div>
                    <span class="small-p">*Negative value in closing calculation Indicates a Rebate</span>
                  </div>
                  <div class="col-md-6">
                    <div class="content-bx">
                      <h1>Extra Savings</h1>
                      <div class="content-bx-content">
                        <table class="table table-striped table-condensed">
                          <tbody>
                            <tr>
                              <td colspan="2">Did you know you can save $2400 or 1.2 points by lowering the loan LTV from <br/> 68% to 60% ?</td>
                            </tr>
                            <tr>
                              <td colspan="2">Did you know you can save $2400 or <br/> 1.3 points by Increasing your credit score <br/> rom 680 to 720? </td>
                            </tr>
                            <tr>
                              <td colspan="2">For these savings and more, get in touch with <span class="orange-clr">Citibank</span></td>
                            </tr>
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="tab-pane fade" id="tab2warning-<%=index%>">
                <div class="row">
                  <div class="col-md-4">
                    <div class="content-bx">
                      <h1>Loan Overview</h1>
                      <div class="content-bx-content">
                        <table class="table table-striped table-condensed">
                          <tbody>
                            <tr>
                              <td><%= pro_term%> <%= pro_term.present? ? "Year Fixed" : ""%></td>
                              <td><b><%= final_rate %>% Rate</b></td>
                            </tr>
                            <tr>
                              <td>Closing Costs</td>
                              <td><b>$6,590</b></td>
                            </tr>
                            <tr>
                              <td>Loan Amount</td>
                              <td><b> <%= "$" + loan_amount_value.to_s if loan_amount_value.present? rescue nil %></b></td>
                            </tr>
                          </tbody>
                        </table>
                      </div>
                    </div>
                    <span class="small-p">Updated Aug 8/30 day rate lock</span>
                  </div>
                  <div class="col-md-8">
                    <div class="content-bx">
                      <h1>Calculate Monthly Payment</h1>
                      <div class="content-bx-content">
                        <%= image_tag("ec_piechart_status.png") %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="tab-pane fade" id="tab3warning-<%=index%>">
                <div class="row">
                  <div class="col-md-4">
                    <div class="content-bx">
                      <h1>Loan Overview</h1>
                      <div class="content-bx-content">
                        <table class="table table-striped table-condensed">
                          <tbody>
                            <tr>
                              <td><%= pro_term%> <%= pro_term.present? ? "Year Fixed" : ""%></td>
                              <td><b><%= final_rate %>% Rate</b></td>
                            </tr>
                            <tr>
                              <td>Closing Costs</td>
                              <td><b>$6,590</b></td>
                            </tr>
                            <tr>
                              <td>Loan Amount</td>
                              <td><b> <%= "$" + loan_amount_value.to_s if loan_amount_value.present? rescue nil%></b></td>
                            </tr>
                          </tbody>
                        </table>
                      </div>
                    </div>
                    <span class="small-p">Updated Aug 8/30 day rate lock</span>
                  </div>
                  <div class="col-md-8">
                    <div class="content-bx">
                      <h1>Loan Parameter</h1>
                      <div class="content-bx-content row loan-para mCustomScrollbar sb-container-scroll">
                        <div class="col-md-6 padding-5">
                          <table class="table table-striped table-condensed">
                            <tbody>
                              <tr>
                                <td>Loan Type</td>
                                <td align="right"><b><%= program_data.loan_type %></b></td>
                              </tr>
                              <tr>
                                <td>Streamline</td>
                                <td align="right"><b><%= program_data.streamline ? "Yes" : "No" %></b></td>
                              </tr>
                              <tr>
                                <td>Full Foc</td>
                                <td align="right"><b><%= program_data.full_doc ? "Yes" : "No" %></b></td>
                              </tr>
                              <tr>
                                <td>Loan Size</td>
                                <% 
                                loan_size_value = ""
                                if program_data.loan_size.present?
                                program_data.loan_size.split("&").map do |loan_size|%>
                                  <%
                                    if loan_size_value.present?
                                      loan_size_value = loan_size_value+"/"+ loan_size
                                    else
                                      loan_size_value = loan_size
                                    end
                                  %>
                                <%
                                  end 
                                end
                                %>
                                <td align="right"><b><%= loan_size_value %></b></td>
                              </tr>
                              <tr>
                                <td>DU</td>
                                <td align="right"><b><%= program_data.du ? "Yes" : "No" %></b></td>
                              </tr>
                              <tr>
                                <td>Interest Rate</td>
                                <td align="right"><b><%= @interest%></b></td>
                              </tr>
                              <tr>
                                <td>Loan Purpose</td>
                                <td align="right"><b><%= program_data.loan_purpose%></b></td>
                              </tr>
                              <tr>
                                <td>Lock Period</td>
                                <td align="right"><b><%= @lock_period %></b></td>
                              </tr>
                              <tr>
                                <td>LP</td>
                                <td align="right"><b><%= program_data.lp ? "Yes" : "No" %></b></td>
                              </tr>
                              <tr>
                                <td nowrap="nowrap">FHA</td>
                                <td align="right"><b><%= program_data.fha ? "Yes" : "No" %></b></td>
                              </tr>
                              <tr>
                                <td>Home Price</td>
                                <td><b> <%= @home_price.present? ? "$"+@home_price.to_s : "" %></b></td>
                              </tr>
                            </tbody>
                          </table>
                        </div>
                        <div class="col-md-6 padding-5">
                          <table class="table table-striped table-condensed">
                            <tbody>
                              <tr>
                                <td nowrap="nowrap">VA</td>
                                <td align="right"><b><%= program_data.va ? "Yes" : "No" %></b></td>
                              </tr>
                              <tr>
                                <td>Credit Score</td>
                                <td align="right"><b><%= @credit_score1%></b></td>
                              </tr>
                              <tr>
                                <td>Down Payment</td>
                                <td align="right"><b><%= @down_payment %></b></td>
                              </tr>
                              <tr>
                                <td nowrap="nowrap">USDA</td>
                                <td align="right"><b><%= program_data.usda ? "Yes" : "No" %></b></td>
                              </tr>
                              <tr>
                                <td nowrap="nowrap">Fannie Mae Product</td>
                                <td align="right"><b><%= program_data.fannie_mae_product %></b></td>
                              </tr>
                              <tr>
                                <td>Loan Amount</td>
                                <td><b> <%= "$" + loan_amount_value.to_s if loan_amount_value.present? rescue nil%></b></td>
                              </tr>
                              <tr>
                                <td>Loan Term</td>
                                <td align="right"><b><%= pro_term %> Years</b></td>
                              </tr>
                              <tr>
                                <td>Freddie Mac Product</td>
                                <td align="right"><b><%= program_data.freddie_mac_product %></b></td>
                              </tr>
                              <tr>
                                <td>Monthly Income</td>
                                <td align="right"><b>$5000</b></td>
                              </tr>
                              <tr>
                                <td>Arm Basic</td>
                                <td align="right"><b><%= program_data.arm_basic %></b></td>
                              </tr>
                              <tr>
                                <td>Arm Advanced</td>
                                <td align="right"><b><%= program_data.arm_advanced %></b></td>
                              </tr>

                            </tbody>
                          </table>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="content-btns">
                <p>Get Started with Liberty Mutual Mortgages</p>
                <a href="#" class="btn btn-orange">Contact lender</a>
                <a href="#" class="btn btn-orange reverse-btn">Continue Searching</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- view details popup end-->
