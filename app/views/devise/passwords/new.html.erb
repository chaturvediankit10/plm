<%title "Forgot Password"%>
<section class="banner directory-banner">
  <div class="banner-overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="inner-banner-title">
          <h1>Forgot Password</h1>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="content-main login-page pt-zero">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, id: 'forgot_signup_form' }) do |f| %>
         <%= devise_error_messages! %>
         <div class="login-page-cntnt login-wrapper">
          <div class="login-rows">
           <i class="fa fa-user"></i>
           <img src="images/login-user.png" alt="">
           <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
          </div>
          <div class="login-rows cntnt-login">
           <%= f.submit "Submit", class: "login-page-btn" %>
           <div class="forgot-signup-links">
            <%= link_to "Sign In", new_session_path(resource_name) %>
           </div>
          </div>
         </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
