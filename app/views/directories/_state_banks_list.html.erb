<section class="banner directory-banner">
  <div class="banner-overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="inner-banner-title">
          <h1>Directory</h1>
        </div>
      </div>
    </div>
  </div>
</section>
<% title 'Bank list'%>
<section class="content-main dirctory mortgage-rates-state pt-zero">
  <div class="container">
    <div class="directory-box">
      <h2>Bank List </h2>
        <div class="directory-links-box">
          <%@counter=0%>
           <%@banks.each do |bank|%>
              <%if @counter % 3 == 0%>
                <div class= 'row'>
              <%end%>
              <% @counter += 1 %>
              <div class="col-xs-12 col-md-4"> 
                <% if @flag == 'mortgage_loan' %>
                  <%current_path = bank_home_mortgage_loan_path(cert: bank.cert,bank_name: custom_path(bank.name)) %>
                <%elsif @flag == 'personal_loan' %>
                  <%current_path = bank_home_personal_loan_path(cert: bank.cert,bank_name: custom_path(bank.name)) %>
                <%else%>
                  <%current_path = bank_home_auto_loan_path(cert: bank.cert,bank_name: custom_path(bank.name)) %>
                <%end%>           
                <%#=link_to bank.name+', '+ state_full_name(bank.stname, true), current_path%>

                <div class="city-link">
                  <%= link_to current_path do %>
                    <span><%=bank.name+', '+ state_full_name(bank.stname, true)%></span>
                    <i class="fa fa-angle-double-right"></i>
                  <% end %>
                </div>  
              </div>
              <%if @counter%3 == 0%>
                </div>
              <%end%>         
           <%end%>   
        </div>                 
    </div>
  </div>
</section>